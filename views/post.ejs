<div class="container dynamic-container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
    
      <div>
      
        <!-- <a class="btn btn-primary" href="/profile">Home</a>
        <a class="btn btn-secondary" href="/feed">My Kairdes</a> -->
        <h2><%= post.title %></h2>
      </div>
      <img class="img-fluid box" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <!-- <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form> -->
        <!-- <h3 class="col-3">Likes: <%= post.likes %></h3> -->
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn myRadio primary-text previewSwap box btnCorrecto fa fa-trash box trashCorrecto" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <!-- <p><%= post.caption %></p> -->
    </div>
    <div class="mt-5 wrapper">
      <h2>Add a Comment</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST" class="categoryForm">
        <!-- <div class="mb-3"> -->
            <!-- <label for="comment" class="form-label" style="margin: 2%;">Note: </label> -->
            <input type="text" class="form-control" id="comment" name="comment" style="max-width: 70%; margin-right: 0.3%;">
            <button type="submit" class="btn myRadio primary-text previewSwap box btnCorrecto">Submit</button>
        <!-- </div> -->
     
      </form>
    </div>
    <ul class="no-list-style correctoAligno">
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5 box my-box-background commentCorrecto correctoAligno2">
          <p>
            <%= comments[i].comment%>
          </p>
        </li>
        <%if(post.user == user.id){ %>
          <form
            action="/comment/deleteComment/<%=comments[i]._id%>?_method=DELETE"
            method="POST"
            class="col-3 trashCorrecto3"
          >
            <input type="text" name="post" style="display: none" value="<%=comments[i].post%>">
            <button class="btn myRadio primary-text previewSwap box btnCorrecto fa fa-trash box trashCorrecto2" type="submit"></button>
          </form>
          <%}%>
      <% } %>
    </ul>
