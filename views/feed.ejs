<%- include('partials/header') -%>
  
    <% if (posts.length < 1) {%>
      <div class="container dynamic-container">
        <h2>No saved Kairdes, Make or upload a Kairde</h2>
        <!-- <h2>Nothing here yet, Upload something or make a Kairde.</h2> -->

      </div>
      <%} else {%>
    <div class="row justify-content-center mt-5 dynamic-container" style="max-width: 90%; margin-left: 5%;">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-4 justify-content-center mt-5">
            <a href="/post/<%= posts[i]._id%>" class="">
              <img class="img-fluid shadow" src="<%= posts[i].image%>">
            </a>
            <h2><%=posts[i].title%></h2>
            <h2><%=posts[i].caption%></h2>
          </li>
        <% } %>
        </ul>
    </div>
    <%}%>
    <div class="dynamic-container" style="max-width: 90%; margin-left: 5%; margin-top: 2%; margin-bottom: 4%;">
      <%- include('partials/upload')-%>
    </div>
   
   
 

 
<%- include('partials/footer') -%>