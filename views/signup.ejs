<%- include('partials/header') -%>
<%- include('partials/cookieDisclaimer')%>
    <script> let cookiesRegister = window.localStorage.getItem('cookies');
      if (!cookiesRegister || cookiesRegister === 'deny') { window.location.replace('/') }
      setButtons(cookiesRegister)
    </script>
    <main class="container dynamic-container">
      <h1>Create an Account</h1>
        <div class="row justify-content-center">
            <section class="col-6 mt-5">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST">
                    <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                      <label for="password" class="form-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                      </div>
                      <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault"><a href="/policies" target="_blank">I have read and accept and/or agree to the terms of service and privacy policies (click to open in new tab).</a></label>
                      </div>
                    <button type="submit" class="btn myRadio primary-text previewSwap" disabled="true" id="submit">Submit</button>
                    <a class="btn myRadio primary-text previewSwap" href="/profile">Cancel</a>

                  </form>
            </section>
        </div>
    </main>
    <script>
      const agreeTerms = document.getElementById('flexSwitchCheckDefault')
      const submit = document.getElementById('submit')
      agreeTerms.addEventListener('change', () =>{
        submit.disabled = !submit.disabled
      })
    </script>
<%- include('partials/footer') -%>