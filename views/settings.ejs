<%- include('partials/header') -%>
<div class="container dynamic-container centering">
        <div class="row justify-content-center width90">
            
            <section class="col-6 mt-5 width100">
                
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
          
                <form action="/updateInfo/<%=user.id%>?_method=PUT" method="POST" class="width90">
                    <h1>My Info</h1>
                    <!-- <div class="mb-3">
                        <label for="userName" class="form-label">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div> -->
                    <div class="mb-3">
                        <label for="mail" class="form-label">Email address</label>
                        <input type="mail" class="form-control" id="mail" aria-describedby="emailHelp" name="mail" value="<%= userStore.mail %>">
                        <div id="emailHelp" class="form-text">The email you want to put in kairdes (this will not change your email associated with your account on registration)</div>
                      </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="name" class="form-control" id="name" name="name" value="<%= userStore.name%>">
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="title" class="form-control" id="title" name="title" value="<%= userStore.title%>">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="phone" class="form-control" id="phone" name="phone" value="<%= userStore.phone%>">
                    </div>
                    <div class="mb-3">
                        <label for="discord" class="form-label">Discord</label>
                        <input type="discord" class="form-control" id="discord" name="discord"
                        value="<%= userStore.discord%>">
                    </div>
                    <div class="mb-3">
                        <label for="twitter" class="form-label">Twitter</label>
                        <input type="twitter" class="form-control" id="twitter" name="twitter" value="<%= userStore.twitter%>">
                    </div>
                    <div class="mb-3">
                        <label for="linkedIn" class="form-label">LinkedIn</label>
                        <input type="linkedIn" class="form-control" id="linkedIn" name="linkedIn" value="<%= userStore.linkedIn%>">
                    </div>
                    <div class="mb-3">
                        <label for="facebook" class="form-label">Facebook</label>
                        <input type="facebook" class="form-control" id="facebook" name="facebook" value="<%= userStore.facebook%>">
                    </div>
                    <div class="mb-3">
                        <label for="website" class="form-label">Website</label>
                        <input type="website" class="form-control" id="website" name="website" value="<%= userStore.website%>">
                    </div>
                    <div class="mb-3">
                        <label for="github" class="form-label">Github</label>
                        <input type="github" class="form-control" id="github" name="github" value="<%= userStore.github%>">
                    </div>
                    <div class="mb-3">
                        <label for="city" class="form-label">City</label>
                        <input type="city" class="form-control" id="city" name="city"
                        value="<%= userStore.city%>">
                    </div>
                    <div class="mb-3">
                        <label for="state" class="form-label">State</label>
                        <input type="state" class="form-control" id="state" name="state" value="<%= userStore.state%>">
                    </div>
                    <!-- <div class="mb-3">
                        <label for="profilePhotoUrl" class="form-label">ProfilePhotoUrl</label>
                        <input type="profilePhotoUrl" class="form-control" id="profilePhotoUrl" name="profilePhotoUrl">
                    </div> -->

                    <!-- need to change this to better handle the array of skills? Maybe remove and add a bank? -->
                    <!-- <div class="mb-3">
                        <label for="skills" class="form-label">Skills</label>
                        <input type="skills" class="form-control" id="skills" name="skills" value="<%= userStore.skills%>">
                    </div> -->
                    <button type="submit" class="btn myRadio primary-text previewSwap box btnCorrecto">Save</button>
                    <a class="shadow box btn myRadio primary-text previewSwap btnCorrecto" href="/profile">Cancel</a>
                  </form>
                  <hr>
                  <div class="dangerZone boxG">
                    <div>
                        <form
                        action="/delete/<%= user.id %>?_method=DELETE"
                        method="POST"
                        class="col-3"
                        style="width: 100%;"
                        onsubmit="return confirm('Do you really want to delete your account? This is permanent and cannot be undone.')"
                      >
                        <h2>.::DANGER ZONE::.</h2>
                        <button class="btn myRadio primary-text previewSwapDanger box btnCorrecto fa fa-trash box trashCorrecto danger-zone-button" type="submit"></button>
                        <h2> Delete My Account</h2>
                      </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <%- include('partials/cookieDisclaimer')%>
<%- include('partials/footer') -%>